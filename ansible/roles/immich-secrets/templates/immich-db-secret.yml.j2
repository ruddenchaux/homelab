apiVersion: v1
kind: Secret
metadata:
  name: {{ immich_secret_name }}
  namespace: {{ immich_namespace }}
type: Opaque
stringData:
  # Used by PostgreSQL container (POSTGRES_PASSWORD env var)
  password: "{{ immich_db_password }}"
  # Kept for potential admin access
  postgres-password: "{{ immich_db_password }}"
